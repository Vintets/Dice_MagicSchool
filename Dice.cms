SUB(LOG_ARR, $la_arr, $la_arrsize)
    // Вывод массива в лог
    // Пример вызова:
    // LOG_ARR("$arr", ARRSIZE($arr))
    LOGWRITE("Размер массива ", $la_arr, ": ", $la_arrsize)
    FOR($i_=0, $i_ < $la_arrsize)
        LOGWRITE("[", $i_, "] = ", GETVAR(STRCONCAT($la_arr, "[", $i_, "]")))
    END_CYC
    LOGWRITE(\n)
END_SUB

