SUB(version_self)
    // Если версия clickermann = "4.14..." то $ver_414 = #TRUE
    //4.13.014
    //4.14.003b
    IF(STRCUT($_ver_self, 1, 4) == "4.14")
        $ver_414 = #TRUE
    ELSE
        $ver_414 = #FALSE
    END_IF
END_SUB

SUB(critical_error, $ce_message)
    IF($ver_414)
        LOGWRITEC(STRCONCAT("*** Critical_error!!! ***  ", $ce_message), 255)
    ELSE
        LOGWRITE(STRCONCAT("*** Critical_error!!! ***  ", $ce_message))
    END_IF
    HALT
END_SUB

