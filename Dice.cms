    $win_h = 705
    $wx2 = $wx1 + $win_w - 1
    $wy2 = $wy1 + $win_h - 1
    IF($loglevel >= 4)
        LOGWRITE("Main field: ", $wx1, ",", $wy1, "-", $wx2, ",", $wy2, "  ", $win_w, "x", $win_h)
    END_IF
